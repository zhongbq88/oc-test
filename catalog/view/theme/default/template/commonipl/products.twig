
<div id="product-category" class="container">
  <div class="row">
    <div id="content" class="{{ class }}"> {% if products %}
      <div class="row"> {% for product in products %}
        <div class="product-layout product-grid col-lg-3 col-md-3 col-sm-6 col-xs-12" style="width:282px;">
          <div class="product-thumb">
            <div class="image"><a href="javascript:loadDesignProduct('{{ product.href }}',$('#product-category'))" ><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a></div>
            <div>
              <div class="caption">
                <h4 ><a href="javascript:loadDesignProduct('{{ product.href }}',this)" style="color:#FFF">{{ product.name }}</a></h4>
                {% if product.price %}
                <p class="price" style="color:#CCC"> {% if not product.special %}
                  {{ product.price }}
                  {% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span> {% endif %}
                  {% endif %} 
              </div>
            </div>
          </div>
        </div>
        {% endfor %} </div>
      <div class="row">
        <div class="col-sm-6 text-left">{{ pagination }}</div>
        <!--<div class="col-sm-6 text-right">{{ results }}</div>--> 
      </div>
      {% endif %}
      {% if not categories and not products %}
      <p>{{ text_empty }}</p>
      <div class="buttons">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {% endif %}
      </div>
    </div>
</div>
