<script type="text/javascript">
$('#button-cart').on('click', function() {
	
	$.ajax({
		url: 'index.php?route=shopify/product/review',
		type: 'post',
		data: $('#product-product input[type=\'text\'], #product-product input[type=\'hidden\']'),
		dataType: 'json',
		beforeSend: function() {
			$('#button-cart').button('loading');
		},
		complete: function() {
			$('#button-cart').button('reset');
		},
		success: function(json) {
			//alert(json);
			if (json['error']) {
				alert('error='+json);
				if (json['error']['option']) {
					for (i in json['error']['option']) {
						var element = $('#input-option' + i.replace('_', '-'));

						if (element.parent().hasClass('input-group')) {
							element.parent().after('<div class="text-danger">' + json['error']['option'][i] + '</div>');
						} else {
							element.after('<div class="text-danger">' + json['error']['option'][i] + '</div>');
						}
					}
				}

				if (json['error']['recurring']) {
					$('select[name=\'recurring_id\']').after('<div class="text-danger">' + json['error']['recurring'] + '</div>');
				}

				// Highlight any found errors
				$('.text-danger').parent().addClass('has-error');
			}

			if (json['success']) {
				//alert($json['images']);
				$(".container #product").attr ("style","display:none;");
				$(".container #theme-content").attr ("style","display:block;");
				$('.breadcrumb').after('<div class="alert alert-success alert-dismissible">' + json['success'] + '<button type="button" class="close" data-dismiss="alert">&times;</button></div>');

				$('#cart > button').html('<span id="cart-total"><i class="fa fa-shopping-cart"></i> ' + json['total'] + '</span>');

				$('html, body').animate({ scrollTop: 0 }, 'slow');

				//$('#cart > ul').load('index.php?route=common/cart/info ul li');
				//alert($json['images']);
				if (json['images']) {
					//alert(123);
					 $(".preview-thumbnails").empty();
					for (i in json['images']) {
						//alert(i);
						$(".preview-thumbnails").append('<li style="list-style-type:none;" > <input type="hidden" name="imgs['+i+']" value="'+json['images'][i]+'" id="input-imgs'+i+'" /><a class="thumbnail" href="'+json['images'][i]+'" title="{{ heading_title }}" style="border:none;"><img src="'+json['images'][i]+'" style="width: 228px; height:auto;" /></a></li>');
					}
				}else{
					//alert(0);
				}
				//alert($json['images']);
			}
		},
        error: function(xhr, ajaxOptions, thrownError) {
            alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
        }
	});
});
</script> 
<script type="text/javascript">

$('button[id^=\'button-upload\']').on('click', function() {
	var node = this;

	$('#form-upload').remove();

	$('body').prepend('<form enctype="multipart/form-data" id="form-upload" style="display: none;"><input type="file" name="file" /></form>');

	$('#form-upload input[name=\'file\']').trigger('click');

	if (typeof timer != 'undefined') {
    	clearInterval(timer);
	}

	timer = setInterval(function() {
		if ($('#form-upload input[name=\'file\']').val() != '') {
			clearInterval(timer);
			var id = $(node).get(0).getAttribute("id");
			var option_id = id.substring('button-upload'.length,id.length);
			var formData =  new FormData($('#form-upload')[0]);
			//alert(document.getElementById("product-img"+option_id).value);
			formData.append("src", document.getElementById("product-img"+option_id).value);
			$.ajax({
				url: 'index.php?route=tool/upload',
				type: 'post',
				dataType: 'json',
				data: formData,
				cache: false,
				contentType: false,
				processData: false,
				beforeSend: function() {
					$(node).button('loading');
				},
				complete: function() {
					$(node).button('reset');
				},
				success: function(json) {
					$('.text-danger').remove();

					if (json['error']) {
						$(node).parent().find('input').after('<div class="text-danger">' + json['error'] + '</div>');
					}

					if (json['success']) {
						document.getElementById("src-option"+option_id).src = json['src'];
						document.getElementById("preimg-option"+option_id).src = json['preimg'];
						$("#src-option"+option_id).attr ("style","float:right;  width: auto; height:35px; display:block;");
						$('#thumbnail'+option_id).attr('href',json['preimg']); 
						$("#option-img"+option_id).val(json['preimg']);
						$("#input-option"+option_id).val(json['code']);
					}
				},
				error: function(xhr, ajaxOptions, thrownError) {
					alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
				}
			});
		}
	}, 500);
});
