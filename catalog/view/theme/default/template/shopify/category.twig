	<script src="catalog/view/javascript/shopify/bootstrap/bt/bootstrap/js/bootstrap.min.js"></script>
	<script src="catalog/view/javascript/shopify/bootstrap/js/bwizard.min.js" type="text/javascript"></script>
	<script type="text/javascript">
	   $("#wizard").bwizard();
	   
	  $(document).ready(function() {	
	$('.row .span3').click(function(){
		var href = $(this).attr('data');
		$.ajax({
        url: href,
        dataType: 'html',
        success: function(html) {
			$('a[href=\'#step2\']').trigger('click');
            $('#wizard .product-design').html(html);
        },
        error: function(xhr, ajaxOptions, thrownError) {
            alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
        }
    });
		});
});
	   
	</script>
