
{% if option_images %}
<h4>{{name}} - ${{price}} {{ text_each }}</h4>

<div class="row">

    <div style="width:58%; display:inline-block; float: left; margin-top: 30px; margin-left:15px;">
    {% if change==1 %}
        <button onclick="load_paired_products({{option_id}})" class="btn btn-default">Remove/Change Style</button>
        {% endif %}
        <div>
            {{description}}
        </div>
    </div>
    
    <div style="width: auto; float:right; display:inline-block; border: 1px solid #b8b8b8; text-align: center; margin-right:15px;">
    
        {% for option_image in option_images %}
    	<div>
         <p><strong>{{option_image.name}}</strong></p>

         <span>
         <img style="height:220px" class="option_image" id="option_image{{ option_image.option_image_id }}" src="{{option_image.image}}" alt="Right Side">
         </span>

        <div class="right_btn" style="margin:15px;">
          <span class="btn btn-success fileinput-button" data-product-option-id="{{ product_option_id }}" data-id="{{ option_image.option_image_id }}" data-src="{{ option_image.image }}" onclick="variant_image(this)"> <i class="glyphicon glyphicon-picture"></i>
              <span>{{button_upload}}</span>
               <input type="hidden" name="option-img[{{ option_image.option_image_id }}]" value="" id="option-img{{ option_image.option_image_id }}" />
              <input type="hidden" name="option[{{ option_image.option_image_id }}]" value="" id="input-option{{ option_image.option_image_id }}" />
              <input type="button" id="button-upload{{ option_image.option_image_id }}"  data-id="{{ option_image.option_image_id }}">
          </span>
        </div>
        </div>
        {% endfor %}
       
    </div>
</div>
{% endif %}
